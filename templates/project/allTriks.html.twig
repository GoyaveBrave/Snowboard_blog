{% extends 'base.html.twig' %}

{% block title %}Hello ProjectController!
{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px / 1.5 sans-serif;
        }
        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <section class="Tricks">

        {% for trick in tricks %}
            <trick>
                <h2>{{ trick.name }}</h2>
                {#<div class="metadata">Ecrit le {{ article.createdAt | date ('d/m/Y') }} Ã  {{ article.createdAt | date ('H:i') }} </div>#}
                <div class="content">
                    <img src="{{ trick.illustrationFilename }} ">
                    <p>{{ trick.description }}</p>
                    <a href="{{ path('trick_show', {'id': trick.id})}}" class="btn btn-primary">Lire la suite</a>
                </div>
            </trick>
        {% endfor %}

    </section>
{% endblock %}
