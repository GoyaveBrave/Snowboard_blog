{% extends 'base.html.twig' %}

{% block title %} Hello ProjectController! {% endblock %}

{% block body %}

    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px / 1.5 sans-serif;
        }
        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <section class="container">

        {% for trick in tricks %}
            <div class="container mt-3">
                <h2>{{ trick.name }}</h2>
                {#<div class="metadata">Ecrit le {{ article.createdAt | date ('d/m/Y') }} Ã  {{ article.createdAt | date ('H:i') }} </div>#}
                <div class="content">
                    <img class="w-50 mx-auto" src="{{ asset('uploads/img/' ~ trick.illustrationFilename) }} ">
                    <p>{{ trick.description | truncate(50)}}</p>
                    <a href="{{ path('trick_show', {'id': trick.id, 'slug': trick.name})}}" class="btn btn-primary">Lire la suite</a>
                </div>
            </div>
        {% endfor %}

    </section>
{% endblock %}
