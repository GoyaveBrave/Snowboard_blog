{% extends 'base.html.twig' %}

{% block body %}
    <trick>
        
        <div class="col-xl w-75" id="div_show">
        <h2 class="text-white text-right">{{ trick.name }}</h2>
        </div>
        <div class="d-flex flex-row justify-content-end" id="black">
            <div class="d-flex flex-column justify-content-end w-50 text-white">
               <div class=" w-25">
                  <p class="text-left text-secondary"> Catégorie </p>
                  <p class="text-left">{{ trick.category.title }}</p>
               </div>
               <div class="">
               <p>{{ trick.description }}</p>
               </div>
               
            </div>
            {#  #}
        </div>
        <div id="black">
               <img class="mx-auto" src="{{ asset('uploads/img/' ~ trick.illustrationFilename) }}">
        </div>
        
    </trick>

    <section id="commentaires">
    <h1>{{ trick.comments | length }} Commentaires :</h1>
    {% for comment in trick.comments %}
        <div class="comment">
            <div class="row">
            <div class="col-3">
               {{comment.author}} (<small>{{comment.createdAt | date('d/m/y à H:i')}}</small>)
            </div>
            <div class="col">
              {{comment.content | raw}}
            </div>
            </div>
    {% endfor %}
    {% if app.user %}
    {{ form_start(commentForm) }}
    {{ form_row(commentForm.author, {'attr': {'placeholder': "Votre nom"}}) }}

    {{ form_row(commentForm.content, {'attr': {'placeholder': "Votre commentaire"}}) }}
    <button type="submit" class="btn btn-success">Publier</button>
    {{ form_end(commentForm) }}
    {% else %}
        <h3>Connectez-vous pour commenter</h3>
        <a href="{{path('app_login')}}" class="btn btn-primary">Se connecter pour commenter</a>
    {% endif %}
        </div>
    </section>
{% endblock %}
