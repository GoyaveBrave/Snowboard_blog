{% block body %}

<h1>Inscription sur le site</h1>
<div class="w-25 mx-auto">
{{ form_start(form) }}


{{ form_row(form.username, {'attr': {'placeholder': 'Nom d\'Utilisateur ...'}})}}
{{ form_row(form.email, {'attr': {'placeholder': 'Adresse Mail ...'}}) }}
